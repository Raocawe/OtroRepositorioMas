<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cristiancastro.tallerandroid.agregarpalabra">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Palabra"
        android:id="@+id/lblPalabra"
        android:layout_marginTop="169dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Referencia"
        android:id="@+id/lblReferencia"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/lblPalabra"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Definicion"
        android:id="@+id/lblDefinicion"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/lblReferencia"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Agregar Palabra"
        android:id="@+id/textView6"
        android:layout_marginTop="50dp"
        android:textSize="40dp"
        android:textColor="#04B486"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPalabra"
        android:layout_below="@+id/lblPalabra"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtReferencia"
        android:layout_below="@+id/lblReferencia"
        android:layout_alignEnd="@+id/txtPalabra"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDefinicion"
        android:layout_below="@+id/lblDefinicion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/agregarp"
        android:onClick="AgregarPalabra"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/lblReferencia"
        android:background="#00ffffff" />

</RelativeLayout>
